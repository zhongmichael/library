<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:gravity="top">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_loading_over"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="已经到底了/(ㄒoㄒ)/~~"
            android:textColor="#919191"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_loading_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@drawable/libbase_pull_up" />

                <ProgressBar
                    android:id="@+id/pb_loading_bar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/libbase_loading"
                    android:indeterminateDuration="2000" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_loading_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="bottom|center_horizontal"
                android:text="上拉加载"
                android:textColor="#919191" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>