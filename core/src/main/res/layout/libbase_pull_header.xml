<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap.Vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_orange_dot"
        style="@style/WrapWrap"
        android:layout_marginTop="@dimen/ptr_circle_margin"
        android:src="@drawable/ptr_shape_circle_orange" />

    <ImageView
        android:id="@+id/iv_green_dot"
        style="@style/WrapWrap"
        android:layout_marginBottom="@dimen/ptr_circle_margin"
        android:layout_marginTop="@dimen/ptr_circle_margin"
        android:src="@drawable/ptr_shape_circle_green" />

    <ImageView
        android:id="@+id/iv_blue_dot"
        style="@style/WrapWrap"
        android:layout_marginBottom="@dimen/ptr_circle_margin"
        android:src="@drawable/ptr_shape_circle_blue" />

</LinearLayout>
